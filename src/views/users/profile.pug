extends ../base 
include ../mixins/video

block content 
  div.profile__data 
    if !user.avatarUrl
      i.fas.fa-user-circle.fa-9x
    else
      if user.avatarUrl.includes("github")
        img(src=user.avatarUrl).avatar.avatar--large
      else 
        img(src="/"+user.avatarUrl).avatar.avatar--large
    h3=user.name
  div.video-grid
    each video in user.videos
      +video(video)
    else 
      span.empty__message No videos found