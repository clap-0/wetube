header 
  a(href="/").header__logo
    i.fab.fa-youtube
  nav 
    ul 
      li 
        a(href="/search")
          i.fas.fa-search
      if loggedIn
        li 
          a(href="/videos/upload") Upload video
        li 
          a(href="/users/edit") Edit Profile
        li 
          a(href="/users/logout") Logout
        li 
          a(href=`/users/${loggedInUser._id}`) 
            if !loggedInUser.avatarUrl
              i.fas.fa-user-circle.fa-3x
            else
              img.avatar(src="/"+loggedInUser.avatarUrl)
      else
        li 
          a(href="/login") Login
        li 
          a(href="/join").header__btn Join
div.header__guard